input {
  file {
    path => "/home/ubuntu/data-elk/wwp_all_clean.log"
    start_position => "beginning"
    sincedb_path => "/dev/null"
  }
}

filter {
  grok  {
    patterns_dir => ["./wwp_pattern_grok.conf"]
    match => {"message" => "%{DATETIME:zdate} - root - ERROR - %{GREEDYDATA:reste}"}
  } 

  date {
    match => ["zdate","yyyy-MM-dd HH:mm:ss,SSS"]
  }

  ruby {
    code => "
      separation = event['reste'].split(/ - /)
      length = separation.length
     
      if length == 3
        event['site'] = separation[0]
        event['erreur_analysed'] = separation[2]
        add_field => {"erreur_unanalysed" => "%{erreur}"}
      else
        event['site'] = 'no_parent'
        event['erreur_analysed'] = separation[0]
      end
    "
  }
}

output {
  elasticsearch {
    hosts => "http://louis-1:9200"
    index => "wwp_log_20170815"
    document_type => "logstash_grok"
  }
}
